<%= render :partial => 'admin/shared/product_sub_menu' %>

<%= render :partial => 'admin/shared/product_tabs', :locals => {:current => "Availabilities"} %>

<div class="yui-u">
  <% form_for @product, :url => {:action => "admin_product_update_availability", :id => @product} do |f| %>
  	<fieldset>
		<legend>Availability Messages</legend>

    <% f.field_container :when_in_stock do %>
    	<%= f.label t("when_in_stock_title") %><br/>
    	<%= f.text_field :availability_id_in_stock %>
    	<%= collection_select :product, :availability_id_in_stock, @availabilities, :id, :text %>    	
    <% end %>

    <% f.field_container :description do %>
    	<%= f.label t("when_out_of_stock_title") %><br/>
    	<%= f.text_field :availability_id_out_of_stock %>
    	<%= f.select 'availability_id_out_of_stock', @availabilities.collect {|p| [ p.text, p.id ] } %>    	
    	<%= collection_select :product, :availability_id_out_of_stock, @availabilities, :id, :text %>    	
    <% end %>

    <p class="form-buttons">
      <%= button t("update"), admin_product_update_availability_url( @product ) %>
      <%= t("or") %> <%= link_to t("cancel"), @product %>
    </p>
	  </fieldset>

  <% end %>
</div>